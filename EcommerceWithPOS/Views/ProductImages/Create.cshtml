@model EcommerceWithPOS.Models.ProductImage

@{
    ViewData["Title"] = "Create";
}

<!-- Page Title Area -->
<div class="row page-title clearfix">
    <!-- /.page-title-left -->
    <div class="page-title-right d-none d-sm-inline-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Product Images</li>
        </ol>
    </div>
</div>

<!-- Different data widgets ============ -->
<!-- =================================== -->
<div class="widget-list">
    <div class="row">
        <div class="col-md-12 widget-holder">
            <div class="widget-bg">
                <div class="widget-heading clearfix">
                    <h5> Create Brands</h5>
                    <a asp-action="Index" class="btn btn-info"><i class="feather feather-arrow-left"></i>Back</a>
                </div>
                <!-- /.widget-heading -->
                <div class="widget-body clearfix">
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Product" class="control-label"></label>
                                    @* <input asp-for="Name" class="form-control" /> *@
                                    <select class="form-control" asp-for="ProductId" asp-items="@(ViewBag.productName) as SelectList">
                                        <option selected disabled> --Select Product-- </option>
                                    </select>
                                    <span asp-validation-for="Product" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ImagePath" class="control-label"></label>
                                    <input type="file" multiple name="Images" class="form-control" id="imageInput" />
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                </div>


                                <div style="width:180px;height:180px; border:2px solid #012970; border-radius:10px; padding:10px;">
                                    <img src="#" style="width:155px;height:155px;" alt="Image Upload" id="imgPreview">
                                </div>
                            </div>
                        </div>





                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
</div>


