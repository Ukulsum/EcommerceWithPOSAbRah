@model EcommerceWithPOS.Models.Product

@{
    ViewData["Title"] = "Create";
}

<!-- Page Title Area -->
<div class="row page-title clearfix">
    <!-- /.page-title-left -->
    <div class="page-title-right d-none d-sm-inline-flex">
