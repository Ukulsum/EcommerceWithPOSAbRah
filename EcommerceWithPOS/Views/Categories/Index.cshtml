@model IEnumerable<EcommerceWithPOS.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="widget-list">
    <div class="row">
        <div class="col-md-12 widget-holder">
            <div class="widget-bg">
                <div class="widget-heading clearfix">
                    <h5> All Categories</h5>
                    <a asp-action="Create" class="btn btn-info"><i class="social-icons">addme</i> Add Category</a>
                </div>
                <!-- /.widget-heading -->
                <div class="widget-body clearfix">

                    <table class="table table-striped table-responsive" data-toggle="datatables" data-plugin-options='{"searching": false}'>
                        <thead class="table">
                            <tr class="thead-inverse bg-success">

                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @* @Html.DisplayNameFor(model => model.ParentId) *@
                                    Parent Category
                                </th>
                                @* <th>
                                    @Html.DisplayNameFor(model => model.Slug)
                                </th> *@
                                <th>
                                    @Html.DisplayNameFor(model => model.ImagePath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShortDescription)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Featured)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @* @Html.DisplayFor(modelItem => item.ParentId) *@
                                        @* @Html.DisplayFor(modelItem => item.Parent.Name)  *@
                                        @* @(item.Parent != null ? item.Parent.Name : "N/A") *@
                                       @*  @Html.DisplayFor(modelItem => item.Parent != null ? item.Parent.Name : "N/A")  *@
                                        @if (item.Parent != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.Parent.Name)
                                        }
                                        else
                                        {
                                            @:N/A
                                        }

                                    </td>
                                    @* <td>
                                        @Html.DisplayFor(modelItem => item.Slug)
                                    </td> *@
                                    @*  <td>
                                        @Html.DisplayFor(modelItem => item.Image)
                                    </td> *@

                                    <td>
                                        <img src="@Url.Content(item.ImagePath)" alt="@item.Name" height="80" width="100" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShortDescription)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Featured)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-success">Action</button>
                                            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <div class="dropdown-menu" role="menu">
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                                                <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i>Details</a>
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.widget-body -->
            </div>
            <!-- /.widget-bg -->
        </div>
        <!-- /.widget-holder -->
    </div>
    <!-- /.row -->
</div>
<!-- /.widget-list -->




